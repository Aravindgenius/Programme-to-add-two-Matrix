#include <iostream>
using namespace std;

int main(){
    int A1[2][2],A2[2][2],A3[2][2];
    cout<<"Enter the first matrix:";
      for (int i = 0; i<2; i++)
        for (int j = 0; j<2; j++)
            cin>>A1[i][j];
    cout<<"Enter the second matrix:";
      for (int i = 0; i<2; i++)
        for (int j = 0; j <2; j++)
            cin>>A2[i][j];
            cout<<"\n";
    for (int i = 0; i<2; i++)
        for (int j = 0; j<2; j++)
            A3[i][j]=A1[i][j]+A2[i][j];
    for (int i = 0; i<2; i++)
        {for (int j = 0; j<2; j++)
            cout<<"\t"<<A3[i][j]<<"\t";
            cout<<"\n"<<"\n";
        }
}
